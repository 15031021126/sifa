<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.liuhezhineng.ximengsifa.business.legalaid.ApplyForLegalAidActivity">

    <include layout="@layout/top_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/business_base" />

            <include layout="@layout/legal_aid_office" />

            <include layout="@layout/legal_aid_office_people" />

            <LinearLayout
                android:id="@+id/ll_annex2"
                style="@style/LinearStyle"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/ChartFieldKeyStyle"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:layout_weight="3"
                        android:text="承办人办理附件" />

                    <TextView
                        android:id="@+id/tv_file1"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/circle_shape"
                        android:gravity="center"
                        android:text="@string/upload_annex"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_annex2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    tools:listitem="@layout/annex_item" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/ll_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/layout_break_business" />

                <Button
                    android:id="@+id/btn_no"
                    style="@style/BottomButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="退回" />

                <Button
                    android:id="@+id/btn_yes"
                    style="@style/BottomButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="通过" />

                <Button
                    android:id="@+id/btn_vidyo"
                    style="@style/BottomButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="视频" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
