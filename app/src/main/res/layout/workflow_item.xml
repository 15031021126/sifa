<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/ll_workflow"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="horizontal">

  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="90dp"
    android:layout_weight="4"
    android:layout_margin="@dimen/dp_12"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="@drawable/gray_shape"
    android:orientation="vertical">

    <TextView
      android:id="@+id/tv_status"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="#36b12f"
      android:text="已完成"
      android:textColor="#ffffff"
      android:textSize="10sp"/>

    <TextView
      android:id="@+id/tv_workflow"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="10dp"
      android:layout_gravity="center_horizontal"
      android:text="人民调解受理登记表"
      android:textSize="14sp"/>
  </LinearLayout>

  <ImageView
    android:id="@+id/iv_workflow_arrow"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_gravity="center_vertical"
    android:src="@drawable/workflow_arrow"/>
</LinearLayout>