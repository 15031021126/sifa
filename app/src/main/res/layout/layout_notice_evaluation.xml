<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">

  <View
    style="@style/TitleTopViewStyle"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <View
      style="@style/TitleLeftViewStyle"/>

    <TextView
      style="@style/ChartFieldStyle"
      android:text="第三方评分"/>
  </LinearLayout>

  <View style="@style/DividingLineStyle_horizontal"/>

  <LinearLayout
    style="@style/LinearStyle">

    <TextView
      style="@style/ChartFieldKeyStyle"
      android:text="评分"/>

    <EditText
      android:id="@+id/tv_evaluate_score"
      style="@style/ChartFieldInputValueStyle"
      android:inputType="number"
      android:maxLength="3"/>
  </LinearLayout>

  <View style="@style/DividingLineStyle_horizontal"/>

  <LinearLayout
    style="@style/LinearStyle"
    android:orientation="vertical">

    <TextView
      style="@style/ChartFieldKeyStyle"
      android:text="备注"/>

    <EditText
      android:id="@+id/tv_evaluate_content"
      style="@style/BigEditText"/>
  </LinearLayout>
</LinearLayout>