<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fitsSystemWindows="true"
  android:orientation="vertical"
  tools:context="com.liuhezhineng.ximengsifa.module.mine.consultingcomplaint.MyConsultationActivity">

  <include layout="@layout/top_bar"/>

  <android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/dp_12"
      android:orientation="vertical">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:scaleType="fitXY"
          android:src="@drawable/comment_map"
          tools:ignore="ContentDescription"/>

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="8dp"
          android:layout_marginLeft="8dp"
          android:text="@string/comment_area"
          android:textSize="14sp"/>
      </LinearLayout>

      <TextView
        android:id="@+id/tv_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_12"
        android:hint="@string/please_select"
        android:textColor="#000000"
        android:textSize="14sp"/>

      <View
        style="@style/DividingLineStyle_horizontal"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"/>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:scaleType="fitXY"
          android:src="@drawable/advisory_type"/>

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="8dp"
          android:layout_marginLeft="8dp"
          android:text="业务类型"
          android:textSize="14sp"/>
      </LinearLayout>

      <TextView
        android:id="@+id/tv_problem_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_12"
        android:hint="@string/please_select"
        android:textColor="#000000"
        android:textSize="14sp"/>

      <View
        style="@style/DividingLineStyle_horizontal"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"/>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:scaleType="fitXY"
          android:src="@drawable/advisory_question"/>

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="8dp"
          android:layout_marginLeft="8dp"
          android:text="问题类型"
          android:textSize="14sp"/>
      </LinearLayout>

      <TextView
        android:id="@+id/tv_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_12"
        android:hint="@string/please_select"
        android:textColor="#000000"
        android:textSize="14sp"/>

      <View
        style="@style/DividingLineStyle_horizontal"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"/>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:scaleType="fitXY"
          android:src="@drawable/contact_phone"/>

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="8dp"
          android:layout_marginLeft="8dp"
          android:text="联系电话"
          android:textSize="14sp"/>
      </LinearLayout>

      <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_12"
        android:background="@null"
        android:hint="@string/please_enter"
        android:inputType="phone"
        android:maxLength="11"
        android:textColor="#000000"
        android:textSize="14sp"/>

      <View
        style="@style/DividingLineStyle_horizontal"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"/>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:scaleType="fitXY"
          android:src="@drawable/advisory_theme"/>

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="8dp"
          android:layout_marginLeft="8dp"
          android:text="@string/advisory_theme"
          android:textSize="14sp"/>
      </LinearLayout>

      <EditText
        android:id="@+id/et_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_12"
        android:background="@null"
        android:hint="@string/please_enter"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="14sp"/>

      <View
        style="@style/DividingLineStyle_horizontal"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"/>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:scaleType="fitXY"
          android:src="@drawable/advisory_content"/>

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="8dp"
          android:layout_marginLeft="8dp"
          android:text="@string/advisory_content"
          android:textSize="14sp"/>
      </LinearLayout>

      <EditText
        android:id="@+id/et_content"
        style="@style/BigEditText"
        android:hint="请详细描述你要咨询的内容"/>

      <Button
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/circle_shape"
        android:gravity="center"
        android:text="@string/commit_question"
        android:textColor="@android:color/white"
        android:textSize="18sp"/>
    </LinearLayout>
  </android.support.v4.widget.NestedScrollView>
</LinearLayout>
