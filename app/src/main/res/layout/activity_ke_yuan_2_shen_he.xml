<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fitsSystemWindows="true"
  android:orientation="vertical"
  tools:context="com.liuhezhineng.ximengsifa.business.legalaid.ApplyForLegalAidActivity">

  <include layout="@layout/top_bar"/>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@color/qmui_config_color_gray_9"
        android:text="申请人基本情况"
        android:textSize="10sp"/>

      <View style="@style/DividingLineStyle_horizontal"/>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp">

        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="姓名"
          android:textSize="10sp"/>

        <TextView
          android:id="@+id/et_name"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="3"
          android:background="@null"
          android:hint="@string/please_enter"
          android:maxLines="1"
          android:singleLine="true"
          android:textColor="@color/qmui_config_color_gray_5"
          android:textSize="10sp"/>
      </LinearLayout>

      <View style="@style/DividingLineStyle_horizontal"/>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp">

        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/sex"
          android:textSize="10sp"/>

        <TextView
          android:id="@+id/tv_sex"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="3"
          android:background="@null"
          android:hint="@string/please_select"
          android:textColor="@color/qmui_config_color_gray_5"
          android:textSize="10sp"/>
      </LinearLayout>

      <View style="@style/DividingLineStyle_horizontal"/>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp">

        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/ethnic"
          android:textSize="10sp"/>

        <TextView
          android:id="@+id/tv_ethnic"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="3"
          android:background="@null"
          android:hint="@string/please_select"
          android:textColor="@color/qmui_config_color_gray_5"
          android:textSize="10sp"/>
      </LinearLayout>

      <View style="@style/DividingLineStyle_horizontal"/>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp">

        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/birthday"
          android:textSize="10sp"/>

        <TextView
          android:id="@+id/tv_birthday"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="3"
          android:background="@null"
          android:hint="@string/please_select"
          android:textColor="@color/qmui_config_color_gray_5"
          android:textSize="10sp"/>
      </LinearLayout>

      <View style="@style/DividingLineStyle_horizontal"/>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp">

        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/id_card_num"
          android:textSize="10sp"/>

        <TextView
          android:id="@+id/et_id_card_num"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="3"
          android:background="@null"
          android:hint="@string/please_enter"
          android:maxLines="1"
          android:singleLine="true"
          android:textColor="@color/qmui_config_color_gray_5"
          android:textSize="10sp"/>
      </LinearLayout>

      <View style="@style/DividingLineStyle_horizontal"/>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp">

        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="所属地区"
          android:textSize="10sp"/>

        <TextView
          android:id="@+id/et_area"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="3"
          android:background="@null"
          android:hint="@string/please_select"
          android:textColor="@color/qmui_config_color_gray_5"
          android:textSize="10sp"/>
      </LinearLayout>

      <View style="@style/DividingLineStyle_horizontal"/>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp">

        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="工作单位"
          android:textSize="10sp"/>

        <TextView
          android:id="@+id/et_work_address"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="3"
          android:background="@null"
          android:hint="@string/please_enter"
          android:maxLines="1"
          android:singleLine="true"
          android:textColor="@color/qmui_config_color_gray_5"
          android:textSize="10sp"/>
      </LinearLayout>

      <View style="@style/DividingLineStyle_horizontal"/>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp">

        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="居住地"
          android:textSize="10sp"/>

        <TextView
          android:id="@+id/et_address"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="3"
          android:background="@null"
          android:hint="@string/please_enter"
          android:maxLines="1"
          android:singleLine="true"
          android:textColor="@color/qmui_config_color_gray_5"
          android:textSize="10sp"/>
      </LinearLayout>

      <View style="@style/DividingLineStyle_horizontal"/>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp">

        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="户籍地"
          android:textSize="10sp"/>

        <TextView
          android:id="@+id/et_home_address"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="3"
          android:background="@null"
          android:hint="@string/please_enter"
          android:maxLines="1"
          android:singleLine="true"
          android:textColor="@color/qmui_config_color_gray_5"
          android:textSize="10sp"/>
      </LinearLayout>

      <View style="@style/DividingLineStyle_horizontal"/>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp">

        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="邮政编码"
          android:textSize="10sp"/>

        <TextView
          android:id="@+id/et_post_code"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="3"
          android:background="@null"
          android:hint="@string/please_enter"
          android:inputType="number"
          android:textColor="@color/qmui_config_color_gray_5"
          android:textSize="10sp"/>
      </LinearLayout>

      <View style="@style/DividingLineStyle_horizontal"/>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp">

        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="联系电话"
          android:textSize="10sp"/>

        <TextView
          android:id="@+id/et_phone"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="3"
          android:background="@null"
          android:hint="@string/please_enter"
          android:inputType="phone"
          android:textColor="@color/qmui_config_color_gray_5"
          android:textSize="10sp"/>
      </LinearLayout>

      <View style="@style/DividingLineStyle_horizontal"/>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/dp_12"
          android:background="@color/qmui_config_color_gray_9"
          android:text="代理人基本情况"
          android:textSize="10sp"/>

        <View style="@style/DividingLineStyle_horizontal"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="3dp">

          <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="姓名"
            android:textSize="10sp"/>

          <TextView
            android:id="@+id/et_agent_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@null"
            android:hint="@string/please_enter"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/qmui_config_color_gray_5"
            android:textSize="10sp"/>
        </LinearLayout>

        <View style="@style/DividingLineStyle_horizontal"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="3dp">

          <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/id_card_num"
            android:textSize="10sp"/>

          <TextView
            android:id="@+id/et_agent_id_card_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@null"
            android:hint="@string/please_enter"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/qmui_config_color_gray_5"
            android:textSize="10sp"/>
        </LinearLayout>

        <View style="@style/DividingLineStyle_horizontal"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="3dp">

          <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="代理人类型"
            android:textSize="10sp"/>

          <TextView
            android:id="@+id/et_agent_person"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@null"
            android:hint="@string/please_select"
            android:textColor="@color/qmui_config_color_gray_5"
            android:textSize="10sp"/>
        </LinearLayout>
      </LinearLayout>

      <View style="@style/DividingLineStyle_horizontal"/>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/dp_12"
          android:background="@color/qmui_config_color_gray_9"
          android:text="案件信息"
          android:textSize="10sp"/>

        <View style="@style/DividingLineStyle_horizontal"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="3dp">

          <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="案件标题"
            android:textSize="10sp"/>

          <TextView
            android:id="@+id/et_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@null"
            android:hint="@string/please_enter"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/qmui_config_color_gray_5"
            android:textSize="10sp"/>
        </LinearLayout>

        <View style="@style/DividingLineStyle_horizontal"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="3dp">

          <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="案件类型"
            android:textSize="10sp"/>

          <TextView
            android:id="@+id/et_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@null"
            android:hint="@string/please_select"
            android:textColor="@color/qmui_config_color_gray_5"
            android:textSize="10sp"/>
        </LinearLayout>

        <View style="@style/DividingLineStyle_horizontal"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="3dp">

          <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="附件"
            android:textSize="10sp"/>

          <TextView
            android:id="@+id/tv_case_file"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:maxLines="1"
            android:singleLine="true"
            android:text="无附件"
            android:textColor="@color/qmui_config_color_gray_5"
            android:textSize="10sp"/>

          <!--<Button-->
          <!--android:roomId="@+roomId/btn_file"-->
          <!--android:layout_width="0dp"-->
          <!--android:layout_height="16dp"-->
          <!--android:layout_weight="1"-->
          <!--android:background="@color/qmui_config_color_gray_9"-->
          <!--android:hint="下载附件"-->
          <!--android:textColor="@color/qmui_config_color_gray_5"-->
          <!--android:textSize="10sp"/>-->
        </LinearLayout>

        <View style="@style/DividingLineStyle_horizontal"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="3dp">

          <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="涉及蒙语"
            android:textSize="10sp"/>

          <TextView
            android:id="@+id/et_line_mengyu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@null"
            android:hint="@string/please_select"
            android:textColor="@color/qmui_config_color_gray_5"
            android:textSize="10sp"/>
        </LinearLayout>

        <View style="@style/DividingLineStyle_horizontal"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="3dp"
          android:orientation="vertical">

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="案情及申请理由"
            android:textSize="10sp"/>

          <TextView
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:padding="3dp"
            android:background="@drawable/border"
            android:baselineAligned="false"
            android:gravity="start"
            android:hint="@string/please_show_your_question_details"
            android:inputType="textMultiLine"
            android:textSize="10sp"/>
        </LinearLayout>

        <LinearLayout
          android:id="@+id/ll_zhiding_chengbanjigou"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:fitsSystemWindows="true"
          android:orientation="vertical">

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:background="@color/qmui_config_color_gray_9"
            android:text="指定承办机构"
            android:textSize="10sp"/>

          <View style="@style/DividingLineStyle_horizontal"/>

          <LinearLayout
            android:id="@+id/ll_law_office"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp">

            <TextView
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="律所"
              android:textSize="10sp"/>

            <TextView
              android:id="@+id/tv_lawyer_office"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="3"
              android:hint="请选择指定的律所"
              android:maxLines="1"
              android:singleLine="true"
              android:textColor="@color/qmui_config_color_gray_5"
              android:textSize="10sp"/>
          </LinearLayout>

          <View style="@style/DividingLineStyle_horizontal"/>

          <LinearLayout
            android:id="@+id/ll_legal_office"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp">

            <TextView
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="基层法律服务所"
              android:textSize="10sp"/>

            <TextView
              android:id="@+id/tv_legal_office"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="3"
              android:hint="请选择指定的基层法律服务所"
              android:maxLines="1"
              android:singleLine="true"
              android:textColor="@color/qmui_config_color_gray_5"
              android:textSize="10sp"/>
          </LinearLayout>

          <View style="@style/DividingLineStyle_horizontal"/>

        </LinearLayout>

        <LinearLayout
          android:id="@+id/ll_btn"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <Button
            android:id="@+id/btn_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="退回"/>

          <Button
            android:id="@+id/btn_yes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="通过"/>
        </LinearLayout>
      </LinearLayout>
    </LinearLayout>
  </ScrollView>
</LinearLayout>
