<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fitsSystemWindows="true"
  android:orientation="vertical"
  tools:context="com.liuhezhineng.ximengsifa.business.legalaid.ApplyForLegalAidActivity">

  <include layout="@layout/top_bar"/>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/dp_12"
      android:fitsSystemWindows="true"
      android:orientation="vertical">

      <LinearLayout
        style="@style/LinearStyle">

        <TextView
          style="@style/ChartFieldKeyStyle"
          android:text="编号"/>

        <TextView
          android:id="@+id/tv_numbering"
          style="@style/ChartFieldInputValueStyle"/>
      </LinearLayout>

      <View style="@style/DividingLineStyle_horizontal"/>

      <LinearLayout
        style="@style/LinearStyle">

        <TextView
          style="@style/ChartFieldKeyStyle"
          android:text="卷宗标题"/>

        <EditText
          android:id="@+id/et_dossier_title"
          style="@style/ChartFieldInputValueStyle"
          android:singleLine="true"/>
      </LinearLayout>

      <View style="@style/DividingLineStyle_horizontal"/>

      <include layout="@layout/duplicate_annex"/>

      <View style="@style/DividingLineStyle_horizontal"/>

      <LinearLayout
        style="@style/LinearStyle"
        android:orientation="vertical">

        <TextView
          style="@style/ChartFieldKeyStyle"
          android:layout_width="match_parent"
          android:text="卷宗内容"/>

        <EditText
          android:id="@+id/et_content"
          style="@style/BigEditText"
          android:hint="请输入卷宗内容"/>
      </LinearLayout>

      <View style="@style/DividingLineStyle_horizontal"/>

      <include layout="@layout/peoples_mediator"/>

      <Button
        android:id="@+id/btn_archiving"
        style="@style/BottomButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_12"
        android:text="归档"/>
    </LinearLayout>
  </ScrollView>
</LinearLayout>
