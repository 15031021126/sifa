<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingTop="6dp"
  android:paddingLeft="6dp"
  android:orientation="vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/iv_avatar"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:background="@drawable/default_person"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_marginLeft="@dimen/dp_12"
          android:layout_gravity="center">

          <ImageView
            android:id="@+id/iv_1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/rating_checked"/>

          <ImageView
            android:id="@+id/iv_2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/rating_not_checked"/>

          <ImageView
            android:id="@+id/iv_3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/rating_not_checked"/>

          <ImageView
            android:id="@+id/iv_4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/rating_not_checked"/>

          <ImageView
            android:id="@+id/iv_5"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/rating_not_checked"/>
        </LinearLayout>

        <TextView
          android:id="@+id/tv_type"
          android:layout_width="wrap_content"
          android:layout_height="30dp"
          android:background="@drawable/circle_shape"
          android:gravity="center"
          android:text="加载中"
          android:textColor="#ffffff"
          android:textSize="12sp"/>
      </LinearLayout>

      <TextView
        android:id="@+id/tv_evaluate_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:text="加载中..."
        android:textSize="12sp"
        tools:text="@string/test"/>

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/dp_12">

        <TextView
          android:id="@+id/tv_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="加载中"
          android:textColor="@color/qmui_config_color_gray_5"
          android:textSize="10sp"/>

        <TextView
          android:id="@+id/tv_date"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/dp_12"
          android:text="加载中"
          android:textColor="@color/qmui_config_color_gray_5"
          android:textSize="10sp"/>
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>
</LinearLayout>