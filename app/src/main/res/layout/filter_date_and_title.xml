<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <View
    style="@style/DividingLineStyle_horizontal"
    android:background="@color/qmui_config_color_gray_9"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:paddingLeft="@dimen/dp_12"
    android:paddingRight="@dimen/dp_12"
    android:background="#ffffff"
    android:orientation="vertical">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="14dp"
      android:text="发布的时间区间"
      android:textSize="12sp"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="30dp"
      android:layout_marginTop="10dp">

      <TextView
        android:id="@+id/tv_start_date"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/gray_shape"
        android:gravity="center"
        android:hint="年/月/日"
        android:textSize="12sp"/>

      <View
        android:layout_width="15dp"
        android:layout_height="0.1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_gravity="center_vertical"
        android:background="#000000"/>

      <TextView
        android:id="@+id/tv_end_date"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/gray_shape"
        android:gravity="center"
        android:hint="年/月/日"
        android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
      android:id="@+id/ll_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="10dp"
        android:text="信息标题"
        android:textSize="12sp"/>

      <EditText
        android:id="@+id/et_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/gray_shape"
        android:hint="请输入标题信息"
        android:singleLine="true"
        android:textSize="12sp"/>
    </LinearLayout>
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#63affe">

    <TextView
      android:id="@+id/tv_reset"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:layout_gravity="center"
      android:gravity="center"
      android:text="重置"
      android:textColor="#ffffff"
      android:textSize="12sp"/>

    <View
      android:layout_width="0.1dp"
      android:layout_height="match_parent"
      android:layout_marginTop="5dp"
      android:layout_marginBottom="5dp"
      android:background="#ffffff"/>

    <TextView
      android:id="@+id/tv_ok"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:layout_gravity="center"
      android:gravity="center"
      android:text="确定"
      android:textColor="#ffffff"
      android:textSize="12sp"/>
  </LinearLayout>

  <View
    android:id="@+id/view_mask"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:alpha="0.5"
    android:background="@color/qmui_config_color_gray_5"/>
</LinearLayout>