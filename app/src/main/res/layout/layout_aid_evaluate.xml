<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fitsSystemWindows="true"
  android:orientation="vertical">

  <View
    style="@style/TitleTopViewStyle"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <View
      style="@style/TitleLeftViewStyle"/>

    <TextView
      style="@style/ChartFieldStyle"
      android:text="第三方评分"/>
  </LinearLayout>

  <View style="@style/DividingLineStyle_horizontal"/>

  <LinearLayout
    style="@style/LinearStyle"
    android:orientation="vertical">

    <EditText
      android:id="@+id/et_approval_opinion"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="3dp"
      android:padding="3dp"
      android:background="@drawable/border"
      android:baselineAligned="false"
      android:gravity="start"
      android:hint="请填写处理结果，此项为必填项"
      android:inputType="textMultiLine"
      android:minHeight="100dp"
      android:textSize="14sp"/>
  </LinearLayout>
</LinearLayout>