<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fitsSystemWindows="true"
  android:orientation="vertical">

  <include layout="@layout/top_bar"/>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <include layout="@layout/business_base"/>

      <LinearLayout
        android:id="@+id/ll_zhiding_chengbanjigou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
          android:layout_width="match_parent"
          android:layout_height="8dp"
          android:background="@color/qmui_config_color_gray_9"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:orientation="horizontal">

          <View
            android:layout_width="4dp"
            android:layout_height="18dp"
            android:background="#63aeff"/>

          <TextView
            style="@style/ChartFieldStyle"
            android:layout_width="wrap_content"
            android:text="指定承办机构"/>

        </LinearLayout>

        <TextView
          style="@style/ChartFieldStyle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="只能选择其中一个承办机构，选择之后出现相关人员选项。也可以不选择，工作人员帮你指定"
          android:textColor="@color/qmui_config_color_red"
          android:textSize="10sp"/>

        <View style="@style/DividingLineStyle_horizontal"/>

        <LinearLayout
          style="@style/LinearStyle">

          <TextView
            style="@style/ChartFieldKeyStyle"
            android:text="法援中心"/>

          <TextView
            android:id="@+id/tv_aid_center"
            style="@style/ChartFieldInputValueStyle"
            android:hint="请指定法援中心"/>
        </LinearLayout>

        <View style="@style/DividingLineStyle_horizontal"/>

        <LinearLayout
          android:id="@+id/ll_law_office"
          style="@style/LinearStyle">

          <TextView
            style="@style/ChartFieldKeyStyle"
            android:text="律所"/>

          <TextView
            android:id="@+id/tv_lawyer_office"
            style="@style/ChartFieldInputValueStyle"
            android:hint="请选择指定的律所"/>
        </LinearLayout>

        <View style="@style/DividingLineStyle_horizontal"/>

        <LinearLayout
          android:id="@+id/ll_legal_office"
          style="@style/LinearStyle">

          <TextView
            style="@style/ChartFieldKeyStyle"
            android:text="基层法律服务所"/>

          <TextView
            android:id="@+id/tv_legal_office"
            style="@style/ChartFieldInputValueStyle"
            android:hint="请选择指定的基层法律服务所"/>
        </LinearLayout>

        <View style="@style/DividingLineStyle_horizontal"/>

      </LinearLayout>

      <LinearLayout
        android:id="@+id/ll_zhiding_chengbanren"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <View
          android:layout_width="match_parent"
          android:layout_height="8dp"
          android:background="@color/qmui_config_color_gray_9"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:orientation="horizontal">

          <View
            android:layout_width="4dp"
            android:layout_height="18dp"
            android:background="#63aeff"/>

          <TextView
            style="@style/ChartFieldStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="指定承办人"/>
        </LinearLayout>

        <View style="@style/DividingLineStyle_horizontal"/>

        <LinearLayout
          android:id="@+id/ll_aid_lawyer"
          style="@style/LinearStyle">

          <TextView
            style="@style/ChartFieldKeyStyle"
            android:text="法援律师"/>

          <TextView
            android:id="@+id/tv_aid_lawyer"
            style="@style/ChartFieldInputValueStyle"
            android:hint="请选择指定的法援律师"/>
        </LinearLayout>

        <View style="@style/DividingLineStyle_horizontal"/>

        <LinearLayout
          android:id="@+id/ll_lawyer"
          style="@style/LinearStyle">

          <TextView
            style="@style/ChartFieldKeyStyle"
            android:text="律师"/>

          <TextView
            android:id="@+id/tv_lawyer"
            style="@style/ChartFieldInputValueStyle"
            android:hint="请选择指定的律师"/>
        </LinearLayout>

        <View style="@style/DividingLineStyle_horizontal"/>

        <LinearLayout
          android:id="@+id/ll_legal_person"
          style="@style/LinearStyle">

          <TextView
            style="@style/ChartFieldKeyStyle"
            android:text="基层法律服务工作者"/>

          <TextView
            android:id="@+id/tv_legal_person"
            style="@style/ChartFieldInputValueStyle"
            android:hint="请选择指定的基层法律服务工作者"/>
        </LinearLayout>

        <View style="@style/DividingLineStyle_horizontal"/>
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/layout_break_business"/>

        <Button
          android:id="@+id/btn_yes"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_margin="@dimen/dp_12"
          android:background="@drawable/circle_shape"
          android:text="提交"
          android:textColor="#ffffff"/>
      </LinearLayout>
    </LinearLayout>
  </ScrollView>
</LinearLayout>
