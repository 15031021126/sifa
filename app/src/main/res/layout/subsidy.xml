<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/ll_subsidy"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">

  <View
    style="@style/TitleTopViewStyle"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <View
      style="@style/TitleLeftViewStyle"/>

    <TextView
      style="@style/ChartFieldStyle"
      android:text="案件承办人领取补贴信息"/>
  </LinearLayout>

  <View style="@style/DividingLineStyle_horizontal"/>

  <TextView
    android:id="@+id/et_subsidy"
    style="@style/BigEditText"
    android:layout_marginBottom="@dimen/dp_12"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:hint="请输入你需要领取的补贴信息详情"
    android:textColor="#858C96"/>
</LinearLayout>