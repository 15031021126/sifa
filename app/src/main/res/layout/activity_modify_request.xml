<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fitsSystemWindows="true"
  android:orientation="vertical"
  tools:context="com.liuhezhineng.ximengsifa.business.legalaid.ApplyForLegalAidActivity">

  <include layout="@layout/top_bar"/>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
          style="@style/TitleTopViewStyle"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:orientation="horizontal">

          <View
            style="@style/TitleLeftViewStyle"/>

          <TextView
            style="@style/ChartFieldStyle"
            android:text="申请人基本情况"/>
        </LinearLayout>

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="2dp"
          android:text="*申请人或被申请人的其中一个的姓名和身份证必须和登录人一致"
          android:textColor="@color/qmui_config_color_red"
          android:textSize="12sp"/>

        <View style="@style/DividingLineStyle_horizontal"/>

        <LinearLayout
          style="@style/LinearStyle">

          <include layout="@layout/required"/>

          <TextView
            style="@style/ChartFieldKeyStyle"
            android:text="姓名"/>

          <EditText
            android:id="@+id/et_name"
            style="@style/ChartFieldInputValueStyle"/>
        </LinearLayout>

        <View style="@style/DividingLineStyle_horizontal"/>

        <LinearLayout
          style="@style/LinearStyle">

          <include layout="@layout/required"/>

          <TextView
            style="@style/ChartFieldKeyStyle"
            android:text="@string/sex"/>

          <TextView
            android:id="@+id/tv_sex"
            style="@style/ChartFieldInputValueStyle"
            android:hint="@string/please_select"/>
        </LinearLayout>

        <View style="@style/DividingLineStyle_horizontal"/>

        <LinearLayout
          style="@style/LinearStyle">

          <include layout="@layout/required"/>

          <TextView
            style="@style/ChartFieldKeyStyle"
            android:text="@string/ethnic"/>

          <TextView
            android:id="@+id/tv_ethnic"
            style="@style/ChartFieldInputValueStyle"
            android:hint="@string/please_select"/>
        </LinearLayout>

        <View style="@style/DividingLineStyle_horizontal"/>

        <LinearLayout
          style="@style/LinearStyle">

          <include layout="@layout/required"/>

          <TextView
            style="@style/ChartFieldKeyStyle"
            android:text="所在旗县"/>

          <TextView
            android:id="@+id/tv_county"
            style="@style/ChartFieldInputValueStyle"
            android:hint="@string/please_select"/>
        </LinearLayout>

        <View style="@style/DividingLineStyle_horizontal"/>

        <LinearLayout
          style="@style/LinearStyle">

          <TextView
            style="@style/ChartFieldKeyStyle"
            android:text="所在乡镇"/>

          <TextView
            android:id="@+id/tv_town"
            style="@style/ChartFieldInputValueStyle"
            android:hint="@string/please_select"/>
        </LinearLayout>

        <View style="@style/DividingLineStyle_horizontal"/>

        <LinearLayout
          style="@style/LinearStyle">

          <include layout="@layout/required"/>

          <TextView
            style="@style/ChartFieldKeyStyle"
            android:text="联系电话"/>

          <EditText
            android:id="@+id/et_phone"
            style="@style/ChartFieldInputValueStyle"
            android:inputType="phone"
            android:maxLength="11"/>
        </LinearLayout>

        <View style="@style/DividingLineStyle_horizontal"/>

        <LinearLayout
          style="@style/LinearStyle">

          <include layout="@layout/required"/>

          <TextView
            style="@style/ChartFieldKeyStyle"
            android:text="@string/birthday"/>

          <TextView
            android:id="@+id/tv_birthday"
            style="@style/ChartFieldInputValueStyle"
            android:hint="@string/please_select"/>
        </LinearLayout>

        <View style="@style/DividingLineStyle_horizontal"/>

        <LinearLayout
          style="@style/LinearStyle">

          <include layout="@layout/required"/>

          <TextView
            style="@style/ChartFieldKeyStyle"
            android:text="@string/id_card_num"/>

          <EditText
            android:id="@+id/et_id_card_num"
            style="@style/ChartFieldInputValueStyle"
            android:maxLength="18"/>
        </LinearLayout>

        <View style="@style/DividingLineStyle_horizontal"/>

        <LinearLayout
          style="@style/LinearStyle">

          <TextView
            style="@style/ChartFieldKeyStyle"
            android:text="职业或职务"/>

          <EditText
            android:id="@+id/et_occupation"
            style="@style/ChartFieldInputValueStyle"/>
        </LinearLayout>

        <View style="@style/DividingLineStyle_horizontal"/>

        <LinearLayout
          style="@style/LinearStyle">

          <TextView
            style="@style/ChartFieldKeyStyle"
            android:text="经常居住地"/>

          <EditText
            android:id="@+id/et_address"
            style="@style/ChartFieldInputValueStyle"/>
        </LinearLayout>

        <View style="@style/DividingLineStyle_horizontal"/>

        <LinearLayout
          style="@style/LinearStyle">

          <TextView
            style="@style/ChartFieldKeyStyle"
            android:text="户籍所在地"/>

          <EditText
            android:id="@+id/et_domicile"
            style="@style/ChartFieldInputValueStyle"/>
        </LinearLayout>

        <View style="@style/DividingLineStyle_horizontal"/>

      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
          style="@style/TitleTopViewStyle"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:orientation="horizontal">

          <View
            style="@style/TitleLeftViewStyle"/>

          <TextView
            style="@style/ChartFieldStyle"
            android:text="被申请人基本情况"/>
        </LinearLayout>

        <LinearLayout
          style="@style/LinearStyle">

          <TextView
            style="@style/ChartFieldKeyStyle"
            android:text="姓名"/>

          <EditText
            android:id="@+id/et_name_1"
            style="@style/ChartFieldInputValueStyle"/>
        </LinearLayout>

        <View style="@style/DividingLineStyle_horizontal"/>

        <LinearLayout
          style="@style/LinearStyle">

          <TextView
            style="@style/ChartFieldKeyStyle"
            android:text="@string/sex"/>

          <TextView
            android:id="@+id/tv_sex_1"
            style="@style/ChartFieldInputValueStyle"
            android:hint="@string/please_select"/>
        </LinearLayout>

        <View style="@style/DividingLineStyle_horizontal"/>

        <LinearLayout
          style="@style/LinearStyle">

          <TextView
            style="@style/ChartFieldKeyStyle"
            android:text="@string/ethnic"/>

          <TextView
            android:id="@+id/tv_ethnic_1"
            style="@style/ChartFieldInputValueStyle"
            android:hint="@string/please_select"/>
        </LinearLayout>

        <View style="@style/DividingLineStyle_horizontal"/>

        <LinearLayout
          style="@style/LinearStyle">

          <TextView
            style="@style/ChartFieldKeyStyle"
            android:text="所在旗县"/>

          <TextView
            android:id="@+id/tv_county_1"
            style="@style/ChartFieldInputValueStyle"
            android:hint="@string/please_select"/>
        </LinearLayout>

        <View style="@style/DividingLineStyle_horizontal"/>

        <LinearLayout
          style="@style/LinearStyle">

          <TextView
            style="@style/ChartFieldKeyStyle"
            android:text="所在乡镇"/>

          <TextView
            android:id="@+id/tv_town_1"
            style="@style/ChartFieldInputValueStyle"
            android:hint="@string/please_select"/>
        </LinearLayout>

        <View style="@style/DividingLineStyle_horizontal"/>

        <LinearLayout
          style="@style/LinearStyle">

          <TextView
            style="@style/ChartFieldKeyStyle"
            android:text="联系电话"/>

          <EditText
            android:id="@+id/et_phone_num_1"
            style="@style/ChartFieldInputValueStyle"
            android:inputType="phone"
            android:maxLength="11"/>
        </LinearLayout>

        <View style="@style/DividingLineStyle_horizontal"/>

        <LinearLayout
          style="@style/LinearStyle">

          <TextView
            style="@style/ChartFieldKeyStyle"
            android:text="@string/birthday"/>

          <TextView
            android:id="@+id/tv_birthday_1"
            style="@style/ChartFieldInputValueStyle"
            android:hint="@string/please_select"/>
        </LinearLayout>

        <View style="@style/DividingLineStyle_horizontal"/>

        <LinearLayout
          style="@style/LinearStyle">

          <TextView
            style="@style/ChartFieldKeyStyle"
            android:text="@string/id_card_num"/>

          <EditText
            android:id="@+id/et_id_card_num_1"
            style="@style/ChartFieldInputValueStyle"/>
        </LinearLayout>

        <View style="@style/DividingLineStyle_horizontal"/>

        <LinearLayout
          style="@style/LinearStyle">

          <TextView
            style="@style/ChartFieldKeyStyle"
            android:text="职业或职务"/>

          <EditText
            android:id="@+id/et_occupation_1"
            style="@style/ChartFieldInputValueStyle"/>
        </LinearLayout>

        <View style="@style/DividingLineStyle_horizontal"/>

        <LinearLayout
          style="@style/LinearStyle">

          <TextView
            style="@style/ChartFieldKeyStyle"
            android:text="经常居住地"/>

          <EditText
            android:id="@+id/et_address_1"
            style="@style/ChartFieldInputValueStyle"/>
        </LinearLayout>

        <View style="@style/DividingLineStyle_horizontal"/>

        <LinearLayout
          style="@style/LinearStyle">

          <TextView
            style="@style/ChartFieldKeyStyle"
            android:text="户籍所在地"/>

          <EditText
            android:id="@+id/et_domicile_1"
            style="@style/ChartFieldInputValueStyle"/>
        </LinearLayout>

        <View style="@style/DividingLineStyle_horizontal"/>

      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <View
          style="@style/TitleTopViewStyle"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:orientation="horizontal">

          <View
            style="@style/TitleLeftViewStyle"/>

          <TextView
            style="@style/ChartFieldStyle"
            android:text="案件基本情况"/>
        </LinearLayout>

        <View style="@style/DividingLineStyle_horizontal"/>

        <LinearLayout
          style="@style/LinearStyle">

          <TextView
            style="@style/ChartFieldKeyStyle"
            android:text="案件标题"/>

          <EditText
            android:id="@+id/et_case_title"
            style="@style/ChartFieldInputValueStyle"
            android:hint="如不填写则后台自动生成"
            android:singleLine="false"
            tools:text="@string/test"/>
        </LinearLayout>

        <View style="@style/DividingLineStyle_horizontal"/>

        <LinearLayout
          style="@style/LinearStyle">

          <include layout="@layout/required"/>

          <TextView
            style="@style/ChartFieldKeyStyle"
            android:text="纠纷类型"/>

          <TextView
            android:id="@+id/tv_dispute_type"
            style="@style/ChartFieldInputValueStyle"
            android:hint="@string/please_select"/>
        </LinearLayout>

        <View style="@style/DividingLineStyle_horizontal"/>

        <LinearLayout
          style="@style/LinearStyle">

          <include layout="@layout/required"/>

          <TextView
            style="@style/ChartFieldKeyStyle"
            android:text="案发旗县"/>

          <TextView
            android:id="@+id/tv_case_county"
            style="@style/ChartFieldInputValueStyle"
            android:layout_height="match_parent"
            android:hint="@string/please_select"/>
        </LinearLayout>

        <View style="@style/DividingLineStyle_horizontal"/>

        <LinearLayout
          style="@style/LinearStyle">

          <include layout="@layout/required"/>

          <TextView
            style="@style/ChartFieldKeyStyle"
            android:text="案发乡镇"/>

          <TextView
            android:id="@+id/tv_case_town"
            style="@style/ChartFieldInputValueStyle"
            android:layout_height="match_parent"
            android:hint="@string/please_select"/>
        </LinearLayout>

        <View style="@style/DividingLineStyle_horizontal"/>

        <include layout="@layout/duplicate_annex"/>

        <View style="@style/DividingLineStyle_horizontal"/>

        <LinearLayout
          style="@style/LinearStyle"
          android:orientation="vertical">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/required"/>

            <TextView
              style="@style/ChartFieldKeyStyle"
              android:layout_width="match_parent"
              android:text="案情及申请理由陈述"/>
          </LinearLayout>

          <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="3dp"
            android:padding="3dp"
            android:background="@drawable/border"
            android:baselineAligned="false"
            android:gravity="start"
            android:hint="@string/please_show_your_question_details"
            android:inputType="textMultiLine"
            android:textSize="14sp"/>
        </LinearLayout>

        <include layout="@layout/office"/>

        <LinearLayout
          android:id="@+id/ll_btn"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <Button
            android:id="@+id/btn_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/dp_12"
            android:background="@drawable/circle_shape"
            android:text="暂时保存"/>

          <Button
            android:id="@+id/btn_yes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/dp_12"
            android:background="@drawable/circle_shape"
            android:text="提交申请"/>
        </LinearLayout>
      </LinearLayout>
    </LinearLayout>
  </ScrollView>
</LinearLayout>
