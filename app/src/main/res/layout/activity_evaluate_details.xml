<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fitsSystemWindows="true"
  android:orientation="vertical"
  tools:context="com.liuhezhineng.ximengsifa.module.service.personnelinstitutions.evaluate.EvaluateDetailsActivity">

  <include layout="@layout/top_bar"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="25dp"
    android:background="@drawable/search_shape"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/iv_avatar"
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:layout_marginLeft="10dp"
      android:layout_gravity="center"
      android:src="@drawable/default_person"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="25dp"
      android:layout_gravity="center"
      android:orientation="vertical">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12">

        <TextView
          android:id="@+id/tv_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/loading"
          android:textSize="16sp"/>

        <View
          android:layout_width="2dp"
          android:layout_height="match_parent"
          android:layout_marginTop="3dp"
          android:layout_marginBottom="3dp"
          android:layout_marginLeft="10dp"
          android:background="@color/blue"/>

        <TextView
          android:id="@+id/tv_work_year"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:layout_gravity="center"
          android:background="@drawable/gray_shape"
          android:text="@string/loading"
          android:textSize="12sp"/>
      </LinearLayout>

      <TextView
        android:id="@+id/tv_person_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="人员类别 基层法律服务者"
        android:textColor="@color/qmui_config_color_gray_5"
        android:textSize="12sp"/>

      <TextView
        android:id="@+id/tv_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="执业证号 123412341234"
        android:textColor="@color/qmui_config_color_gray_5"
        android:textSize="12sp"/>

      <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="联系电话 12312312312"
        android:textColor="@color/qmui_config_color_gray_5"
        android:textSize="12sp"/>
    </LinearLayout>
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:layout_marginTop="@dimen/dp_12"
    android:background="#ffffff">

    <LinearLayout
      android:id="@+id/ll_case_type"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:gravity="center">

      <TextView
        android:id="@+id/tv_case_type"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="案件类型"
        android:textSize="12sp"/>

      <ImageView
        android:id="@+id/iv_case_type"
        android:layout_width="12dp"
        android:layout_height="8dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/arrow_up"/>
    </LinearLayout>

    <LinearLayout
      android:id="@+id/ll_rating"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:gravity="center">

      <TextView
        android:id="@+id/tv_rating"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="星级评价"
        android:textSize="12sp"/>

      <ImageView
        android:id="@+id/iv_rating"
        android:layout_width="12dp"
        android:layout_height="8dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/arrow_up"/>
    </LinearLayout>

    <LinearLayout
      android:id="@+id/ll_date"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:gravity="center">

      <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="时间"
        android:textSize="12sp"/>

      <ImageView
        android:id="@+id/iv_date"
        android:layout_width="12dp"
        android:layout_height="8dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/arrow_up"/>
    </LinearLayout>
  </LinearLayout>

  <View
    style="@style/DividingLineStyle_horizontal"/>

  <com.scwang.smartrefresh.layout.SmartRefreshLayout
    android:id="@+id/refreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    app:srlAccentColor="@android:color/black"
    app:srlEnablePreviewInEditMode="true"
    app:srlPrimaryColor="@android:color/white">

    <com.scwang.smartrefresh.layout.header.ClassicsHeader
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

    <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_evaluate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        app:layoutManager="LinearLayoutManager"/>

      <include
        android:visibility="gone"
        layout="@layout/no_data"/>

      <View
        android:id="@+id/view_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:background="@color/qmui_config_color_gray_5"
        android:visibility="gone"/>
    </FrameLayout>

    <com.scwang.smartrefresh.layout.footer.ClassicsFooter
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>
  </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>
